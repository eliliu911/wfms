@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Employee
            </a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Frist Name</th>
            <th>Last Name</th>
            <th>Hired Date</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td width="25%">@obj.FristName</td>
               <td width="25%">@obj.LastName</td>
               <td width="30%">@obj.HiredDate</td>
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="Employees" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                       <a asp-controller="Employees" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>

