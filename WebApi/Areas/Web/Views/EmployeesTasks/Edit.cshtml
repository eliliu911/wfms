@model WebApi.Models.Employee_Gen
<form asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2 class="text-primary">Edit Employee</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Employee.Id" />
        <div class="mb-3">
            <label asp-for="Employee.FristName" class="control-label"></label>
            <input asp-for="Employee.FristName" class="form-control" />
            <span asp-validation-for="Employee.FristName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Employee.LastName" class="control-label"></label>
            <input asp-for="Employee.LastName" class="form-control" />
            <span asp-validation-for="Employee.LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Employee.HiredDate" class="control-label"></label>
            <input asp-for="Employee.HiredDate" class="form-control" />
            <span asp-validation-for="Employee.HiredDate" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>
<div class="border p-3 mt-4">
    <div class="row pd-2">
        <h3 class="text-primary">Manage Tasks</h3>
    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].Deadline)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tasks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                <a asp-action="EditTask" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a> |
                <a asp-action="DeleteTask" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="CreateTask" asp-route-id="@Model.Employee.Id" class="btn btn-primary" style="width:150px"><i class="bi bi-plus-circle"></i> &nbsp; New Task</a> &nbsp;
    <a asp-action="Index" class="btn btn-secondary" style="width:150px"><i class="bi bi-backspace"></i>&nbsp; Back to List</a>
</div>
</div>


