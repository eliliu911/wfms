@model WebApi.Models.Employee
<form asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2 class="text-primary">New Employee</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="FristName" class="control-label"></label>
            <input asp-for="FristName" class="form-control" />
            <span asp-validation-for="FristName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HiredDate" class="control-label"></label>
            <input asp-for="HiredDate" class="form-control" />
            <span asp-validation-for="HiredDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary" style="width:150px"><i class="bi bi-backspace"></i>&nbsp; Back to List</a>
        </div>
    </div>
</form>



